{
  "name": "@addasoft/timespan",
  "version": "1.0.0",
  "description": "format milliseconds as human readable strings",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint:eslint": "eslint --ext .js . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucienimmink/timespan.js.git"
  },
  "author": "Lucien Immink",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucienimmink/timespan.js/issues"
  },
  "homepage": "https://github.com/lucienimmink/timespan.js#readme",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ]
  },
  "devDependencies": {
    "eslint": "^8.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}
